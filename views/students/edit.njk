{% extends 'layout.njk' %}

{% block content %}
<div class="card">
    <section class="avatar" style="width: 100%; height: 100%; background: url({{students.avatar_url}}) no-repeat
    center center / cover"></section>
    <section class="details">
        <form action="/students?_method=PUT" method="POST"><!-- Mudei pra PUT com ajuda da DEPENDENCIA method_override -->
            <h3>Detalhes</h3>
            <input type="hidden" name="id" value="{{students.id}}">
            {% include 'students/fields.njk' %}
            
        </form>
        <form action="/students?_method=DELETE" method="POST" class="deletion">  
            <input type="hidden" name="id" value="{{students.id}}">
            <button type="submit">Deletar</button>  
        </form>
    </section>

</div>

{% include 'confirm.njk' %}
{% endblock %}